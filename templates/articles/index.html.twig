{% extends 'layouts/public.html.twig' %}

{% block title %}Articles ({{ articles|length }}){% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <h1 class="my-4">Articles</h1>
            <div class="row">
                <div class="col-md-12">
                    <h4>Filter by Categories</h4>
                </div>
                <div class="col-md-12">
                    <form method="GET">
                        <div class="form-group">
                            <label for="categories">Categories</label>
                            <select class="form-control" multiple name="categories[]" id="categories">
                                {% for category in categories %}
                                    <option {% if category.id in categoriesFilter %} selected {% endif %} value="{{ category.id }}">{{ category.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <button class="btn btn-primary">Search</button>
                    </form>
                </div>
            </div>
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Title</th>
                    <th scope="col">Slug</th>
                    <th scope="col">Enabled</th>
                    <th scope="col">Categories</th>
                    <th scope="col">Created At</th>
                    <th scope="col">Updated At</th>
                </tr>
                </thead>
                <tbody>
                {% for article in articles %}
                    <tr>
                        <th scope="row">{{ article.getId() }}</th>
                        <td>{{ article.getTitle() }}</td>
                        <td>{{ article.getSlug() }}</td>
                        <td>{{ article.getIsEnabled()  ? 'Yes':'No' }}</td>
                        <td>
                            {% for category in article.getCategories() %}
                                <a href="{{ path('categories_show',{'slug': category.getSlug()}) }}">{{ category.getName() }}</a>
                            {% endfor %}
                        </td>
                        <td>{{ article.getCreatedAt|date('Y-m-d H:i:s') }}</td>
                        <td>{{ article.getUpdatedAt|date('Y-m-d H:i:s') }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>
{% endblock %}
